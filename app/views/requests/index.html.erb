<h1>Requests</h1>

<a href='requests/new' type="button" class="btn btn-default">
    <div class="glyphicon glyphicon-plus" aria-hidden="true">
    </div>
</a>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Start</th>
      <th>End</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

   
  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.title %></td>
        <td><%= request.date_requesting_start %></td>
        <td><%= request.date_requesting_end %></td>
        <td><%= request.status %></td>   
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Cancel', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
